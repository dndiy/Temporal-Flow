---
import MainGridLayout from '../layouts/MainGridLayout.astro';
import { i18n } from '../i18n/translation';
import I18nKey from '../i18n/i18nKey';
import { Icon } from 'astro-icon/components';
import { communityConfig } from '../config/community.config';
---

<MainGridLayout title={i18n(I18nKey.community) || "Our Community"} description={i18n(I18nKey.community) || "Join our community through multiple channels"}>
  <!-- Community Hero Section -->
  <div id="community-hero" class="card-base flex flex-col md:flex-row w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-[300px] mb-8">
    <div class="pl-6 md:pl-9 pr-6 md:pr-9 pt-6 md:pt-7 pb-6 md:w-2/3">
      <h2 class="text-3xl font-bold text-90 mb-4 text-[var(--primary)] dark:text-[var(--primary)]">{communityConfig.hero.title}</h2>
      <p class="text-neutral-600 dark:text-neutral-300 mb-6 leading-relaxed">
        {communityConfig.hero.description}
      </p>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
        {communityConfig.hero.options.filter(option => option.enabled).map((option) => (
          <a href={`#${option.sectionId}`} class="engagement-option flex items-center p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-all">
            <div class="bg-[#5865F2] bg-opacity-20 p-2 rounded-full mr-3">
              <Icon name={option.icon} class="w-5 h-5 text-[#5865F2]" />
            </div>
            <div>
              <h3 class="font-medium text-90">{option.title}</h3>
              <p class="text-xs text-neutral-500 dark:text-neutral-400">{option.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
    
    {communityConfig.hero.showGraphic && (
      <div class="community-graphic md:w-1/3 min-h-[200px] md:min-h-0 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-tr from-[var(--primary)] to-[color:var(--primary-light,#667eea)] flex items-center justify-center">
          <Icon name="mdi:account-group" class="w-32 h-32 text-white opacity-30" />
        </div>
      </div>
    )}
  </div>

  <!-- Discord Section -->
  {communityConfig.discord.enabled && (
    <div id="discord-section" class="card-base w-full rounded-[var(--radius-large)] overflow-hidden relative mb-8">
      <div class="pl-6 md:pl-9 pr-6 md:pr-9 pt-6 md:pt-7 pb-6 w-full">
        <div class="flex items-center mb-6">
          <Icon name="mdi:discord" class="w-8 h-8 text-[#5865F2] mr-3" />
          <h2 class="text-2xl font-bold text-90 text-[var(--primary)] dark:text-[var(--primary)]">{communityConfig.discord.title}</h2>
        </div>
        
        <div class="flex flex-col md:flex-row gap-8">
          <div class="md:w-2/3">
            <p class="text-neutral-600 dark:text-neutral-300 mb-6 leading-relaxed">
              {communityConfig.discord.description}
            </p>
            
            <div class="space-y-4 mb-6">
              {communityConfig.discord.features.map((feature) => (
                <div class="flex items-start space-x-4">
                  <div class="bg-[#5865F2] bg-opacity-10 p-2 rounded-full">
                    <Icon name={feature.icon} class="w-5 h-5 text-[#5865F2]" />
                  </div>
                  <div>
                    <h3 class="font-medium text-90 text-base mb-1">{feature.title}</h3>
                    <p class="text-sm text-neutral-500 dark:text-neutral-400">{feature.description}</p>
                  </div>
                </div>
              ))}
            </div>
            
            <a 
              href={communityConfig.discord.inviteUrl} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="discord-join-button"
            >
              <Icon name="mdi:discord" class="w-6 h-6" />
              {communityConfig.discord.buttonText}
            </a>
          </div>
          
          {communityConfig.discord.channels.length > 0 && (
            <div class="md:w-1/3 bg-neutral-100 dark:bg-neutral-800 rounded-lg p-5">
              <h3 class="font-medium text-neutral-200 text-lg mb-3">Channel Overview</h3>
              <ul class="space-y-3">
                {communityConfig.discord.channels.map((channel) => (
                  <li class="flex items-center text-sm">
                    <span class={`w-2 h-2 bg-${channel.color} rounded-full mr-2`}></span>
                    <span class="font-medium text-neutral-700 dark:text-neutral-200 mr-2">{channel.name}</span>
                    <span class="text-neutral-500 dark:text-neutral-400">{channel.description}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    </div>
  )}

  <!-- Contact Section -->
  {communityConfig.contact.enabled && (
    <div id="contact-section" class="card-base w-full rounded-[var(--radius-large)] overflow-hidden relative mb-8">
      <div class="pl-6 md:pl-9 pr-6 md:pr-9 pt-6 md:pt-7 pb-6 w-full">
        <div class="flex items-center mb-6">
          <Icon name="mdi:message-text-outline" class="w-8 h-8 text-[var(--primary)] mr-3" />
          <h2 class="text-2xl font-bold text-90 text-[var(--primary)] dark:text-[var(--primary)]">{communityConfig.contact.title}</h2>
        </div>
        
        <div class="flex flex-col md:flex-row gap-8">
          <div class="md:w-1/2">
            <p class="text-neutral-600 dark:text-neutral-300 mb-6 leading-relaxed">
              {communityConfig.contact.description}
            </p>
            
            <div class="space-y-4 mb-6">
              {communityConfig.contact.features.map((feature) => (
                <div class="flex items-start space-x-4">
                  <div class="bg-[var(--primary)] bg-opacity-10 p-2 rounded-full">
                    <Icon name={feature.icon} class="w-5 h-5 text-[var(--primary)]" />
                  </div>
                  <div>
                    <h3 class="font-medium text-90 text-base mb-1">{feature.title}</h3>
                    <p class="text-sm text-neutral-500 dark:text-neutral-400">{feature.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
    
          <!-- Form section -->
          <div class="md:w-1/2 bg-neutral-50 dark:bg-neutral-800/50 rounded-lg p-6">
            <h3 class="font-medium text-neutral-200 text-lg mb-4">Send Us a Message</h3>
            <form 
              action={communityConfig.contact.formActionUrl} 
              method="POST"
              class="space-y-4"
            >
              <div>
                <label for="name" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                  {communityConfig.contact.formFields.name.label}
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  placeholder={communityConfig.contact.formFields.name.placeholder} 
                  class="w-full px-3 py-2 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-md text-sm"
                  required={communityConfig.contact.formFields.name.required}
                />
              </div>
              
              <div>
                <label for="contact-email" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                  {communityConfig.contact.formFields.email.label}
                </label>
                <input 
                  type="email" 
                  id="contact-email" 
                  name="email" 
                  placeholder={communityConfig.contact.formFields.email.placeholder} 
                  class="w-full px-3 py-2 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-md text-sm"
                  required={communityConfig.contact.formFields.email.required}
                />
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                  {communityConfig.contact.formFields.subject.label}
                </label>
                <input 
                  type="text" 
                  id="subject" 
                  name="subject" 
                  placeholder={communityConfig.contact.formFields.subject.placeholder} 
                  class="w-full px-3 py-2 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-md text-sm"
                  required={communityConfig.contact.formFields.subject.required}
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                  {communityConfig.contact.formFields.message.label}
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows={communityConfig.contact.formFields.message.rows} 
                  placeholder={communityConfig.contact.formFields.message.placeholder} 
                  class="w-full px-3 py-2 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-md text-sm"
                  required={communityConfig.contact.formFields.message.required}
                ></textarea>
              </div>
              
              <div>
                <button 
                  type="submit" 
                  class="contact-send-button"
                >
                  <Icon name="mdi:send" class="w-5 h-5" />
                  {communityConfig.contact.buttonText}
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  )}
  
  <!-- Newsletter Section -->
  {communityConfig.newsletter.enabled && (
    <div id="newsletter-section" class="card-base w-full rounded-[var(--radius-large)] overflow-hidden relative mb-8">
      <div class="pl-6 md:pl-9 pr-6 md:pr-9 pt-6 md:pt-7 pb-6 w-full">
        <div class="flex items-center mb-6">
          <Icon name="mdi:email-newsletter" class="w-8 h-8 text-[var(--primary)] mr-3" />
          <h2 class="text-2xl font-bold text-90 text-[var(--primary)] dark:text-[var(--primary)]">{communityConfig.newsletter.title}</h2>
        </div>
        
        <div class="flex flex-col md:flex-row gap-8">
          <div class="md:w-1/2">
            <p class="text-neutral-600 dark:text-neutral-300 mb-6 leading-relaxed">
              {communityConfig.newsletter.description}
            </p>
            
            <div class="space-y-4 mb-6">
              {communityConfig.newsletter.features.map((feature) => (
                <div class="flex items-start space-x-4">
                  <div class="bg-[var(--primary)] bg-opacity-10 p-2 rounded-full">
                    <Icon name={feature.icon} class="w-5 h-5 text-[var(--primary)]" />
                  </div>
                  <div>
                    <h3 class="font-medium text-90 text-base mb-1">{feature.title}</h3>
                    <p class="text-sm text-neutral-500 dark:text-neutral-400">{feature.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
          
          <div class="md:w-1/2 bg-neutral-50 dark:bg-neutral-800/50 rounded-lg p-6">
            <h3 class="font-medium text-neutral-200 text-lg mb-4">Subscribe to Our Newsletter</h3>
            <form class="space-y-4">
              <div>
                <label for="email" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Email Address</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  placeholder="your@email.com" 
                  class="w-full px-3 py-2 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-md text-sm"
                  required
                />
              </div>
              
              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <input
                    id="newsletter-consent"
                    name="newsletter-consent"
                    type="checkbox"
                    class="h-4 w-4 text-[var(--primary)] border-neutral-300 rounded"
                    required
                  />
                </div>
                <div class="ml-3 text-sm">
                  <label for="newsletter-consent" class="text-neutral-500 dark:text-neutral-400">
                    {communityConfig.newsletter.consentText}
                  </label>
                </div>
              </div>
              
              <div>
                <button 
                  type="submit" 
                  class="newsletter-subscribe-button"
                >
                  <Icon name="mdi:email-check-outline" class="w-5 h-5" />
                  {communityConfig.newsletter.buttonText}
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  )}

  <!-- Events Section -->
  {communityConfig.events.enabled && (
    <div id="events-section" class="card-base w-full rounded-[var(--radius-large)] overflow-hidden relative mb-8">
      <div class="pl-6 md:pl-9 pr-6 md:pr-9 pt-6 md:pt-7 pb-6 w-full">
        <div class="flex items-center mb-6">
          <Icon name="mdi:calendar-month-outline" class="w-8 h-8 text-[var(--primary)] mr-3" />
          <h2 class="text-2xl font-bold text-90 text-[var(--primary)] dark:text-[var(--primary)]">{communityConfig.events.title}</h2>
        </div>
        
        <p class="text-neutral-600 dark:text-neutral-300 mb-6 leading-relaxed">
          {communityConfig.events.description}
        </p>
        
        <!-- Event content would go here -->
        
        <div class="text-center">
          <a 
            href={communityConfig.events.calendarUrl} 
            class="event-calendar-button"
          >
            <Icon name="mdi:calendar-month" class="w-5 h-5" />
            {communityConfig.events.calendarButtonText}
          </a>
        </div>
      </div>
    </div>
  )}

  <!-- Community Guidelines Section -->
  {communityConfig.guidelines.enabled && (
    <section class="card-base px-9 py-6 rounded-[var(--radius-large)]">
      <h2 class="text-2xl font-bold text-90 mb-4 text-[var(--primary)] dark:text-[var(--primary)]">{communityConfig.guidelines.title}</h2>
      <div class="space-y-4 mb-6">
        <p class="text-sm text-neutral-500 dark:text-neutral-400">
          {communityConfig.guidelines.description}
        </p>
        
        <ul class="list-disc pl-5 space-y-2 text-sm text-neutral-500 dark:text-neutral-400">
          {communityConfig.guidelines.items.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    </section>
  )}
</MainGridLayout>

<style>
.discord-join-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background-color: #5865F2;
  color: white;
  font-weight: 500;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  transition: all 0.2s ease-in-out;
  box-shadow: 0 4px 6px -1px rgba(88, 101, 242, 0.2);
}

.discord-join-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 12px -2px rgba(88, 101, 242, 0.3);
  background-color: #4752C4;
}

.newsletter-subscribe-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background-color: var(--primary);
  color: white;
  font-weight: 500;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  transition: all 0.2s ease-in-out;
  width: 100%;
  justify-content: center;
}

.newsletter-subscribe-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(var(--primary-rgb), 0.3);
  filter: brightness(110%);
}

.contact-send-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background-color: var(--primary);
  color: white;
  font-weight: 500;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  transition: all 0.2s ease-in-out;
  width: 100%;
  justify-content: center;
}

.contact-send-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(var(--primary-rgb), 0.3);
  filter: brightness(110%);
}

.event-calendar-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background-color: transparent;
  color: var(--primary);
  font-weight: 500;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  border: 1px solid var(--primary);
  transition: all 0.2s ease-in-out;
}

.event-calendar-button:hover {
  background-color: rgba(var(--primary-rgb), 0.1);
  transform: translateY(-2px);
}

.engagement-option {
  transition: all 0.2s ease-in-out;
}

.engagement-option:hover {
  transform: translateY(-2px);
}

.event-card {
  transition: all 0.2s ease-in-out;
}

.event-card:hover {
  transform: translateY(-3px);
}

@media (max-width: 768px) {
  .community-graphic {
    order: -1;
  }
}
</style>