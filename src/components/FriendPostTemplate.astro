---
// This template will be used for both local and friend posts
import { Icon } from 'astro-icon/components';
---

<!-- This template will be loaded but hidden, then cloned for each friend post -->
<template id="friend-post-template">
  <div class="card-base flex flex-col-reverse md:flex-col w-full rounded-[var(--radius-large)] overflow-hidden relative friend-post onload-animation" style="border-left: 3px solid var(--primary);">
    <div class="pl-6 md:pl-9 pr-6 md:pr-2 pt-6 md:pt-7 pb-6 relative w-full md:w-[calc(100%_-_var(--coverWidth)_-_12px)]">
      <!-- Friend attribution -->
      <div class="flex items-center mb-2">
        <div class="w-6 h-6 bg-neutral-200 dark:bg-neutral-700 rounded-full overflow-hidden mr-2 flex-shrink-0">
          <img 
            src="/placeholder.png" 
            alt="Friend avatar"
            class="w-full h-full object-cover"
            onerror="this.src='/placeholder.png'"
            data-friend-avatar="true"
          />
        </div>
        <span class="text-sm text-neutral-500 dark:text-neutral-400">
          Shared from <a href="#" target="_blank" rel="noopener noreferrer" class="text-[var(--primary)] hover:underline" data-friend-name="true">Friend</a>
        </span>
      </div>
      
      <!-- Title with icon -->
      <a href="#" data-title-link="true" class="transition group w-full block font-bold mb-3 text-3xl text-90
        hover:text-[var(--primary)] dark:hover:text-[var(--primary)]
        active:text-[var(--title-active)] dark:active:text-[var(--title-active)]
        before:w-1 before:h-5 before:rounded-md before:bg-[var(--primary)]
        before:absolute before:top-[35px] before:left-[18px] before:hidden md:before:block">
        <span data-title="true">Title</span>
        <Icon class="inline text-[2rem] text-[var(--primary)] md:hidden translate-y-0.5 absolute" name="material-symbols:chevron-right-rounded" />
        <Icon class="text-[var(--primary)] text-[2rem] transition hidden md:inline absolute translate-y-0.5 opacity-0 group-hover:opacity-100 -translate-x-1 group-hover:translate-x-0" name="material-symbols:chevron-right-rounded" />
      </a>

      <!-- Metadata -->
      <div class="mb-4 flex flex-wrap gap-x-2 items-center text-sm font-medium">
        <!-- Date -->
        <div class="flex items-center">
          <time datetime="2025-01-01" data-date="true">
            2025-01-01
          </time>
        </div>
        
        <!-- Category -->
        <div class="flex items-center" data-category-container="true">
          <div class="mx-1.5 text-[var(--meta-divider)] text-sm">/</div>
          <a href="#" class="transition hover:text-[var(--primary)]" data-category-link="true">
            <span data-category="true">Category</span>
          </a>
        </div>
        
        <!-- Tags -->
        <div class="hidden md:flex items-center" data-tags-container="true">
          <div class="mx-1.5 text-[var(--meta-divider)] text-sm">/</div>
          <div class="flex items-center" data-tags-list="true">
            <!-- Tags will be inserted here dynamically -->
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="transition text-75 mb-3.5 pr-4" data-description-container="true">
        <span data-description="true">Description</span>
      </div>

      <!-- Word count and read time -->
      <div class="text-sm text-black/30 dark:text-white/30 flex gap-4 transition">
        <div data-words="true">0 words</div>
        <div>|</div>
        <div data-minutes="true">0 min read</div>
      </div>
    </div>

    <!-- Image Container -->
    <div data-image-container="true" style="display:none">
      <a href="#" aria-label="Post title" data-image-link="true"
        class="group max-h-[50vh] md:max-h-none mx-4 mt-4 -mb-2 md:mb-0 md:mx-0 md:mt-0 md:w-[var(--coverWidth)] relative md:absolute md:top-3 md:bottom-3 md:right-3 rounded-xl overflow-hidden active:scale-95">
        <div class="absolute pointer-events-none z-10 w-full h-full group-hover:bg-black/30 group-active:bg-black/50 transition"></div>
        <div class="absolute pointer-events-none z-20 w-full h-full flex items-center justify-center">
          <Icon name="material-symbols:chevron-right-rounded"
                class="transition opacity-0 group-hover:opacity-100 scale-50 group-hover:scale-100 text-white text-5xl"/>
        </div>
        <div class="w-full h-full">
          <img src="/placeholder.png" alt="Cover image" class="w-full h-full object-cover" data-image="true"/>
        </div>
      </a>
    </div>
    
    <!-- No-Image Button -->
    <div data-no-image-container="true" style="display:none">
      <a href="#" aria-label="Post title" data-no-image-link="true" class="!hidden md:!flex btn-regular w-[3.25rem]
        absolute right-3 top-3 bottom-3 rounded-xl bg-[var(--enter-btn-bg)]
        hover:bg-[var(--enter-btn-bg-hover)] active:bg-[var(--enter-btn-bg-active)] active:scale-95">
        <Icon name="material-symbols:chevron-right-rounded"
              class="transition text-[var(--primary)] text-4xl mx-auto"/>
      </a>
    </div>
  </div>
  <div class="transition border-t-[1px] border-dashed mx-6 border-black/10 dark:border-white/[0.15] last:border-t-0 md:hidden"></div>
</template>